<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip" >

    <ImageView
            android:id="@+id/issue_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="@string/issue"
            android:src="@drawable/ic_launcher" />

    <TextView
            android:id="@+id/issue_secondLine_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/issue_icon"
            android:padding="2dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="ID"
            android:textAppearance="?android:textAppearanceSmall" />

    <TextView
            android:id="@+id/issue_secondLine_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/issue_secondLine_left"
            android:layout_marginLeft="8dp"
            android:padding="2dip"
            android:background="@drawable/status_border"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="issue status?"
            android:textAppearance="?android:textAppearanceSmall" />

    <TextView
            android:id="@+id/issue_secondLine_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/issue_secondLine_right"
            android:layout_marginLeft="8dp"
            android:padding="2dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="3 Points"
            android:textAppearance="?android:textAppearanceSmall" />

    <TextView
            android:id="@+id/issue_firstLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/issue_icon"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Issue subject"
            android:textAppearance="?android:textAppearanceMedium" />

</RelativeLayout>
